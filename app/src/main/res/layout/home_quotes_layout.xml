<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/homeQuotesCardMarginLeft"
        android:layout_marginTop="@dimen/homeQuotesCardMarginTop"
        android:layout_marginRight="@dimen/homeQuotesCardMarginRight"
        android:background="@color/whiteColor"
        app:cardCornerRadius="@dimen/homeQuotesCardRedious"
        app:cardElevation="@dimen/homeQuotesCardElevation"

        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHomeQuotesLayoutQuotesId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homeQuotesLayHeight"
                android:background="@color/basicColor"
                android:gravity="center"
                android:padding="@dimen/quotesTextPadding"
                android:text="@string/sample_quotes"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/quotesTextSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/HomeQuotesLayBottomHeight"
                android:background="@color/basicLightColor"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/quotesBottomPartPadding"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/linLayHomeQuotesLayoutFav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivHomeQuotesLayoutFavId"
                        android:layout_width="@dimen/quotesIconWidth"
                        android:layout_height="@dimen/quotesIconWidth"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_favourite" />

                    <TextView
                        android:id="@+id/tvHomeQuotesLayoutFavId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/quotesIconTextMarginLeft"
                        android:text="Love"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/quotesTextSize"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayHomeQuotesLayoutCopy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/quotesIconWidth"
                        android:layout_height="@dimen/quotesIconWidth"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_copy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/quotesIconTextMarginLeft"
                        android:text="Copy"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/quotesTextSize"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayHomeQuotesLayoutShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/quotesIconWidth"
                        android:layout_height="@dimen/quotesIconWidth"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/quotesIconTextMarginLeft"
                        android:text="Share"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/quotesTextSize"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>