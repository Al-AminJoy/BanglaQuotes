<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bangla_bani.bangla_quotes.Activity.FavouriteActivity">

    <include
        layout="@layout/favourite_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/avBannerFavId"
        android:layout_marginBottom="@dimen/quotesMarginBottom" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avBannerFavId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_id"></com.google.android.gms.ads.AdView>
</RelativeLayout>